# Production Environment Configuration
# Copy this to .env on your server and fill in actual values

# =========================
# üîê Credentials (REQUIRED!)
# =========================
OPENAI_API_KEY=your_openai_api_key_here

# =========================
# üóÇÔ∏è Paths (AUTO-DETECTED)
# =========================
# Leave these commented for auto-detection
# BASE_DIR=/app/data
# STATIC_DIR=/app/static

# =========================
# üóÇÔ∏è Multi-tenant
# =========================
DEFAULT_CLIENT_ID=rsms

# =========================
# üåê FastAPI server
# =========================
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
ALLOW_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =========================
# üîç Retrieval Settings
# =========================
INITIAL_RETRIEVE_K=12
REFERENCE_DISPLAY_K=6

# =========================
# üí¨ Chat/Synthesis Model
# =========================
OPENAI_CHAT_MODEL=gpt-4o-mini
SYNTHESIS_TEMPERATURE=0.1

# =========================
# üß† Reranker Settings
# =========================
ENABLE_RERANKER=true
OPENAI_RERANK_MODEL=gpt-4o-mini
RERANK_MAX_PASSAGES=20

# =========================
# ü§ñ Embedding Settings
# =========================
EMBED_MODEL=text-embedding-3-large
EMBED_BATCH=128

# =========================
# üöÄ Advanced RAG Features
# =========================
FINAL_SYNTHESIS_K=5
COMPOUND_SYNTHESIS_K=8
FOLLOWUP_SYNTHESIS_K=6
ENABLE_ENTITY_ENHANCEMENT=true

# =========================
# üìù Logging
# =========================
LOG_LEVEL=INFO
LOG_CONFIG_ON_IMPORT=true